@model TestePositivo.Models.ErrorViewModel
@inject IWebHostEnvironment Env

@{
    ViewData["Title"] = "Ocorreu um erro";
}

<h2 class="mb-3">Ops! Algo inesperado aconteceu.</h2>

<div class="alert alert-danger">
    <p>Por favor, tente novamente. Se o problema persistir, informe o suporte.</p>
</div>

@if (Model.ShowRequestId)
{
    <p><strong>RequestId:</strong> <code>@Model.RequestId</code></p>
}

@if (Env.IsDevelopment())
{
    <div class="card mt-3">
        <div class="card-header fw-semibold">Detalhes (apenas em Desenvolvimento)</div>
        <div class="card-body small">
            @if (!string.IsNullOrWhiteSpace(Model.Path))
            {
                <p><strong>Path:</strong> @Model.Path</p>
            }
            @if (!string.IsNullOrWhiteSpace(Model.ExceptionType))
            {
                <p><strong>Tipo:</strong> @Model.ExceptionType</p>
            }
            @if (!string.IsNullOrWhiteSpace(Model.Message))
            {
                <p><strong>Mensagem:</strong> @Model.Message</p>
            }
        </div>
    </div>
}

<div class="mt-3">
    <a asp-controller="Alunos" asp-action="Index" class="btn btn-primary">Voltar para a página inicial</a>
</div>
