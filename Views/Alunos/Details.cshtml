@model TestePositivo.Domain.Entities.Aluno

<h2 class="mb-4">Detalhes do Aluno</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Matrícula</dt>
            <dd class="col-sm-9">@Model.Matricula</dd>

            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.NomeCompleto</dd>

            <dt class="col-sm-3">Data de Nascimento</dt>
            <dd class="col-sm-9">@Model.DataNascimento.ToShortDateString()</dd>

            <dt class="col-sm-3">Série</dt>
            <dd class="col-sm-9">@Model.Serie</dd>

            <dt class="col-sm-3">Segmento</dt>
            <dd class="col-sm-9">@Model.Segmento</dd>

            <dt class="col-sm-3">Pai</dt>
            <dd class="col-sm-9">@Model.NomePai</dd>

            <dt class="col-sm-3">Mãe</dt>
            <dd class="col-sm-9">@Model.NomeMae</dd>

            <dt class="col-sm-3">Endereço</dt>
            <dd class="col-sm-9">
                @Model.Endereco.Tipo - @Model.Endereco.Rua, @Model.Endereco.Numero<br />
                CEP: @Model.Endereco.CEP<br />
                @Model.Endereco.Complemento
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
