@model TestePositivo.Domain.Entities.Aluno

<h2 class="mb-4">Excluir Aluno</h2>

<div class="alert alert-danger">
    <strong>Atenção!</strong> Tem certeza que deseja excluir este aluno?
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Matrícula</dt>
            <dd class="col-sm-9">@Model.Matricula</dd>

            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.NomeCompleto</dd>

            <dt class="col-sm-3">Série</dt>
            <dd class="col-sm-9">@Model.Serie</dd>

            <dt class="col-sm-3">Segmento</dt>
            <dd class="col-sm-9">@Model.Segmento</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
