@model TestePositivo.Domain.Entities.Aluno

<h2 class="mb-4">Excluir Aluno</h2>

<div class="alert alert-danger">
    Tem certeza que deseja excluir <strong>@Model.NomeCompleto</strong>?
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Matrícula</dt>
            <dd class="col-sm-9">@Model.Matricula</dd>

            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.NomeCompleto</dd>

            <dt class="col-sm-3">Série</dt>
            <dd class="col-sm-9">@Model.Serie.GetDisplayName()</dd>

            <dt class="col-sm-3">Segmento</dt>
            <dd class="col-sm-9">@Model.Segmento.GetDisplayName()</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
